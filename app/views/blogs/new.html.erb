<% if @blog.errors.any? %>
    <% @blog.errors.full_messages.each do |mess|%>
        <li style="color: red"><%= mess %></li>
    <% end %>
<% end %><br>

<%= form_for @blog do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %> 
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.submit 'Post Blog'%>
<% end %>